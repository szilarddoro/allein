{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Allein",
  "version": "0.11.0",
  "identifier": "com.szilarddoro.allein",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Allein",
        "backgroundColor": "#ff0000",
        "width": 1440,
        "height": 900,
        "minWidth": 880,
        "minHeight": 550,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "acceptFirstMouse": true,
        "trafficLightPosition": {
          "x": 16,
          "y": 24
        }
      }
    ],
    "security": { "csp": null }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
